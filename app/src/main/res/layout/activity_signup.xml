<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"

    android:weightSum="13"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35sp"
            android:fontFamily="@font/marck_script"
            android:gravity="center"
            android:text="Instagram"
            android:textColor="#ffffff"
            android:textSize="50dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sign  up to see photos and videos"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="from you friends."
            android:textSize="20sp">

        </TextView>

        <Button
            android:layout_width="325sp"
            android:layout_height="50sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="25sp"
            android:background="@drawable/corner"
            android:text="Log in with Facebook"
            android:textStyle="bold"
            android:textColor="#fff">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <view
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30dp"
            android:background="#000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="15dp"
            android:text="OR"
            android:textColor="#fff"
            android:textSize="25sp" />

        <view
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_marginTop="30dp"
            android:background="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/gradient2"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#fff"
            android:textSize="20dp">

        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/gradient2"
            android:hint="Full Name"
            android:inputType="text"
            android:textColorHint="#fff"
            android:textSize="20dp">

        </EditText>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/gradient2"
            android:hint="Username"
            android:inputType="text"
            android:textColorHint="#fff"
            android:textSize="20dp">

        </EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/gradient2"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textSize="20dp">

        </EditText>

        <Button
            android:id="@+id/signup2"
            android:layout_width="325sp"
            android:layout_height="40sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/corner"
            android:text="Sign Up"
            android:textStyle="bold"
            android:onClick="signup"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="By signing up,you agree to our"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Terms and Privacy Policy"
            android:textSize="15sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85sp"
            android:text="Have an account?"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/loginText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textSize="20sp"
            android:textColor="#fff">

        </TextView>
    </LinearLayout>

</LinearLayout>